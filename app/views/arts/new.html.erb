<h1>post cartwork</h1>

<form>
<%= form_for @art, url: root_path, html: { multipart: true} do |f| %>

<div class="form-group">
  <%= f.text_field :name, class:"form-control", placeholder:"Name of Artwork"%>
</div>
<div class="form-group">
  <%= f.text_field :style, class:"form-control", placeholder:"Art Style" %>
</div>
<div class="form-group">
<%= f.number_field :price, class:"form-control", placeholder:"Price of Artwork"%>
</div>
<div class="form-group">
  <%= f.text_field :details, class:"form-control", placeholder:"Details of Artwork" %>
</div>
<div class="form-group">
  <%= f.label :avatar, "Artwork Picture" %>
  <%= f.file_field :avatar, class:"form-control", type:"file", id:"exampleInputFile", placeholder:"Artwork" %>
</div>
  <%= f.submit class:'btn btn-default' %>
<% end %>
</form>
