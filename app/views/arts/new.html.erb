<h1>post art</h1>

<%= form_for @art, url: create_user_path, html: { multipart: true} do |f| %>
  <%= f.text_field :name, class:"form-control", placeholder:"Name of artwork"%>
  <br>
  <%= f.text_field :style, class:"form-control", placeholder:"Style of artwork" %>
  <br>
  <%= f.number_field :price, class:"form-control", type:"email", placeholder:"Price of artwork"%>
  <br>
  <%= f.text_field :details, class:"form-control", placeholder:"Details of artwork" %>
  <br>
  <%= f.label :avatar, "Profile Picture" %>
  <%= f.file_field :avatar, class:"form-control", type:"file", id:"exampleInputFile", placeholder:"Profile Picture" %>
  <br>
  <%= f.submit class:'btn btn-default' %>
<% end %>
