<h1 style="background: #2e6da4;color:black; opacity: 0.8;margin-top:0">artists & collectors</h1>

<% @users.each do |u| %>
<div style="display: inline-block; margin: 0 1% 0; width: 305px;background: white;  border: 2px solid black; border-radius: 5%;">
<h4>username: <%=  link_to u.username, show_user_path(u) %></h4>
<div><%= image_tag u.avatar.url(:medium) %></div>
<div style="margin: 5px; backround:rgb(226, 226, 226);">
<div>Name: <%= u.first %> <%= u.last %></div>
<div>Age: <%= u.age %></div>
<div>Art Created: <%= u.arts.count %></div>
<div>Art Collected: 0</div>
<div>Likes: <%= u.likes.count %></div>
</div>
</div>
<% end %>
